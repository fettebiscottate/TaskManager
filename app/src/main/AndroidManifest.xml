<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.TaskManager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.TaskManager.editTask"
            android:label="Edit your Task"
            android:parentActivityName="com.example.TaskManager.MainActivity" />
        <activity
            android:name="com.example.TaskManager.editCategory"
            android:label="Category"
            android:parentActivityName="com.example.TaskManager.MainActivity" />
        <activity
            android:name="com.example.TaskManager.add_task"
            android:label="Add your task"
            android:parentActivityName="com.example.TaskManager.MainActivity" />
        <activity
            android:name="com.example.TaskManager.CalendarActivity"
            android:label="Calendar"
            android:parentActivityName="com.example.TaskManager.MainActivity" />

        <activity
            android:name="com.example.TaskManager.Graph"
            android:label="Graph"
            android:parentActivityName="com.example.TaskManager.MainActivity" />
        <activity
            android:name="com.example.TaskManager.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.example.TaskManager.AlarmReceiver"></receiver>
    </application>

</manifest>